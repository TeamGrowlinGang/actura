{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "foundershack",
    "version": "0.1.0",
    "identifier": "com.bonsen.foundershack",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "macOSPrivateApi": true,
        "windows": [
            {
                "label": "main",
                "title": "Main App",
                "width": 800,
                "height": 600,
                "url": "http://localhost:1420"
            },
            {
                "label": "overlay",
                "title": "Overlay",
                "width": 500,
                "height": 44,
                "minWidth": 200,
                "minHeight": 80,
                "alwaysOnTop": true,
                "decorations": false,
                "transparent": true,
                "resizable": false,
                "skipTaskbar": true,
                "shadow": false,
                "visible": false,
                "url": "http://localhost:1420/overlay.html"
            }
        ]
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}