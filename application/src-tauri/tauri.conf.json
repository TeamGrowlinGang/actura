{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Actura",
    "version": "1.0.0",
    "identifier": "com.bonsen.actura",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "macOSPrivateApi": true,
        "windows": [
            {
                "label": "overlay",
                "title": "Overlay",
                "width": 170,
                "height": 50,
                "alwaysOnTop": true,
                "decorations": false,
                "transparent": true,
                "resizable": false,
                "skipTaskbar": true,
                "shadow": false,
                "visible": true,
                "url": "overlay.html"
            }
        ]
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/logo-256.ico",
            "icons/logo.png"
        ]
    }
}